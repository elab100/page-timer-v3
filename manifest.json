{
  "manifest_version": 3,
  "name": "Page Timer V3",
  "description": "How long have I been on this page?",
  "version": "3.0",
  "author": "EE",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "clock16.png",
    "48": "clock48.png",
    "128": "clock128.png"
  },
  "action": {
    "default_icon": {
      "19": "browser-action-19.png",
      "38": "browser-action-38.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html"
}